<LinearLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:background="#FFFFFFFF"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
	<ScrollView 
		android:fillViewport="true"
		android:id="@+id/mainView"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_weight="1"
		android:background="#FFFFFFFF"
		>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical">
			<LinearLayout
				android:id="@+id/background"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@drawable/nice_weather"
				android:orientation="vertical">

				<LinearLayout
					android:id="@+id/r5jgq1mkirx2"
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:layout_marginBottom="15dp"
					android:background="#26D9D9D9"
					android:orientation="horizontal">

					<Button
						android:id="@+id/buttonSearch"
						android:layout_width="117dp"
						android:layout_height="wrap_content"
						android:text="@string/search" />

					<EditText
						android:id="@+id/searchBox"
						android:layout_width="285dp"
						android:layout_height="wrap_content"
						android:clickable="true"
						android:ems="10"
						android:focusableInTouchMode="true"
						android:hint="@string/city_search"
						android:inputType="text"
						android:selectAllOnFocus="true"
						android:textColor="#FFFFFF" />

				</LinearLayout>


				<TextView
					android:id="@+id/largeName"
					android:layout_width="240dp"
					android:layout_height="wrap_content"
					android:layout_marginHorizontal="16dp"
					android:layout_marginBottom="6dp"
					android:text="Ha Noi"
					android:textColor="#FFFFFF"
					android:textSize="32sp" />

				<TextView
					android:id="@+id/largeDate"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginHorizontal="16dp"
					android:layout_marginBottom="36dp"
					android:text="Thứ Sáu, 15/03/2024"
					android:textColor="#FFFFFF"
					android:textSize="16sp" />

				<TextView
					android:id="@+id/largeTemp"
					android:textColor="#FFFFFF"
					android:textSize="80sp"
					android:layout_marginBottom="31dp"
					android:layout_marginHorizontal="89dp"
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:text="23°C"
				/>
				<LinearLayout
					android:id="@+id/largeBanner"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:gravity="center_vertical"
					android:layout_marginBottom="33dp"
					android:layout_marginHorizontal="14dp"
					android:orientation="horizontal">
					<LinearLayout
						android:id="@+id/lowest"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:layout_marginEnd="4dp"
						android:orientation="vertical">
						<TextView
							android:id="@+id/lowestTemp"
							android:textColor="#FFFFFF"
							android:textSize="20sp"
							android:layout_marginBottom="3dp"
							android:layout_marginHorizontal="10dp"
							android:layout_height="wrap_content"
							android:layout_width="wrap_content"
							android:text="19°C"
						/>
						<TextView
							android:id="@+id/lowestText"
							android:textColor="#FFFFFF"
							android:textSize="14sp"
							android:layout_height="wrap_content"
							android:layout_width="wrap_content"
							android:text="@string/lowest"
						/>
					</LinearLayout>
					<ImageView
						android:id="@+id/mediumWeatherIcon"
						android:layout_width="40dp"
						android:layout_height="28dp"
						android:layout_marginEnd="18dp"
						android:src="@drawable/cloud"
						android:scaleType="fitXY"
					/>
					<TextView
						android:id="@+id/mediumWeatherText"
						android:textColor="#FFFFFF"
						android:textSize="16sp"
						android:layout_marginEnd="33dp"
						android:layout_height="wrap_content"
						android:layout_width="wrap_content"
						android:text="Nhiều mây"
					/>
					<LinearLayout
						android:id="@+id/highest"
						android:layout_width="62dp"
						android:layout_height="wrap_content"
						android:orientation="vertical">
						<TextView
							android:id="@+id/highestTemp"
							android:textColor="#FFFFFF"
							android:textSize="20sp"
							android:layout_marginBottom="3dp"
							android:layout_marginHorizontal="4dp"
							android:layout_height="wrap_content"
							android:layout_width="wrap_content"
							android:text="27°C"
						/>
						<TextView
							android:id="@+id/HighestText"
							android:textColor="#FFFFFF"
							android:textSize="14sp"
							android:layout_height="wrap_content"
							android:layout_width="wrap_content"
							android:text="@string/highest"
						/>
					</LinearLayout>

				</LinearLayout>



				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:orientation="horizontal">


				</LinearLayout>
				<TextView
					android:id="@+id/textView"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginHorizontal="16dp"
					android:layout_marginBottom="4dp"
					android:text="@string/hourly_forecast"
					android:textColor="#FFFFFF"
					android:textSize="16sp" />
				<ListView
					android:id="@+id/listViewHourly"
					android:layout_width="match_parent"
					android:layout_height="400dp"
					android:layout_weight="1"
					android:padding="3dp"
					android:divider="@drawable/small_bg" />
				<TextView
					android:id="@+id/textView"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginHorizontal="16dp"
					android:layout_marginBottom="4dp"
					android:text="@string/daily_forecast"
					android:textColor="#FFFFFF"
					android:textSize="16sp"
					tools:ignore="DuplicateIds" />
				<ListView
					android:id="@+id/listViewDaily"
					android:layout_width="match_parent"
					android:layout_height="260dp"
					android:layout_weight="1"
					android:padding="3dp"
					android:divider="@drawable/small_bg" />
				<LinearLayout
					android:id="@+id/box"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:gravity="center_vertical"
					android:layout_marginBottom="16dp"
					android:layout_marginHorizontal="16dp"
					android:orientation="horizontal">
					<LinearLayout
						android:id="@+id/feel"
						android:layout_width="154dp"
						android:layout_height="wrap_content"
						android:background="@drawable/medium_bg"
						android:padding="17dp"
						android:orientation="vertical">
						<LinearLayout
							android:id="@+id/feelTextLayout"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:gravity="center_vertical"
							android:layout_marginBottom="25dp"
							android:orientation="horizontal">
							<ImageView
								android:id="@+id/feelIcon"
								android:layout_width="9dp"
								android:layout_height="16dp"
								android:src="@drawable/temperature_three_quarters"
								android:scaleType="fitXY"
								android:layout_marginRight="8dp"
							/>
							<TextView
								android:id="@+id/feelText"
								android:textColor="#FFFFFF"
								android:textSize="16sp"
								android:layout_height="wrap_content"
								android:layout_width="wrap_content"
								android:text="@string/feels_like"
							/>
						</LinearLayout>
						<TextView
							android:id="@+id/feelTemp"
							android:textColor="#FFFFFF"
							android:textSize="48sp"
							android:layout_marginBottom="12dp"
							android:layout_height="wrap_content"
							android:layout_width="wrap_content"
							android:text="30°C"
						/>
					</LinearLayout>
					<View
						android:layout_width="0dp"
						android:layout_height="0dp"
						android:layout_weight="1"
					 />
					<LinearLayout
						android:id="@+id/humidity"
						android:layout_width="154dp"
						android:layout_height="wrap_content"
						android:background="@drawable/medium_bg"
						android:padding="17dp"
						android:orientation="vertical">
						<LinearLayout
							android:id="@+id/humidityTextLayout"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:gravity="center_vertical"
							android:layout_marginBottom="25dp"
							android:orientation="horizontal">
							<ImageView
								android:id="@+id/humidityIcon"
								android:layout_width="11dp"
								android:layout_height="15dp"
								android:layout_marginEnd="8dp"
								android:src="@drawable/droplet"
								android:scaleType="fitXY"
							/>
							<TextView
								android:id="@+id/humidityText"
								android:textColor="#FFFFFF"
								android:textSize="16sp"
								android:layout_height="wrap_content"
								android:layout_width="match_parent"
								android:layout_weight="1"
								android:text="@string/humidity"
							/>
						</LinearLayout>
						<TextView
							android:id="@+id/humidityTemp"
							android:textColor="#FFFFFF"
							android:textSize="48sp"
							android:layout_marginBottom="14dp"
							android:layout_height="wrap_content"
							android:layout_width="wrap_content"
							android:text="77%"
						/>
					</LinearLayout>
				</LinearLayout>
				<LinearLayout
					android:id="@+id/rsr41sm9la47"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:gravity="center_vertical"
					android:layout_marginBottom="16dp"
					android:layout_marginHorizontal="16dp"
					android:orientation="horizontal">
					<LinearLayout
						android:id="@+id/wind"
						android:layout_width="154dp"
						android:layout_height="wrap_content"
						android:background="@drawable/medium_bg"
						android:paddingVertical="17dp"
						android:paddingHorizontal="16dp"
						android:orientation="vertical">
						<LinearLayout
							android:id="@+id/windTextLayout"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:gravity="center_vertical"
							android:layout_marginBottom="23dp"
							android:orientation="horizontal">
							<ImageView
								android:id="@+id/windIcon"
								android:layout_width="16dp"
								android:layout_height="16dp"
								android:layout_marginEnd="5dp"
								android:src="@drawable/wind"
								android:scaleType="fitXY"
							/>
							<TextView
								android:id="@+id/windText"
								android:textColor="#FFFFFF"
								android:textSize="16sp"
								android:layout_height="wrap_content"
								android:layout_width="match_parent"
								android:layout_weight="1"
								android:text="@string/wind_speed"
							/>
						</LinearLayout>
						<TextView
							android:id="@+id/windPower"
							android:textColor="#FFFFFF"
							android:textSize="48sp"
							android:layout_marginBottom="16dp"
							android:layout_height="wrap_content"
							android:layout_width="wrap_content"
							android:text="5.05"
						/>
						<TextView
							android:id="@+id/windDescription"
							android:textColor="#FFFFFF"
							android:textSize="16sp"
							android:layout_height="wrap_content"
							android:layout_width="wrap_content"
							android:text="m/s"
						/>
					</LinearLayout>
					<View
						android:layout_width="0dp"
						android:layout_height="0dp"
						android:layout_weight="1"
					 />
					<LinearLayout
						android:id="@+id/pressure"
						android:layout_width="154dp"
						android:layout_height="wrap_content"
						android:background="@drawable/medium_bg"
						android:padding="16dp"
						android:orientation="vertical">
						<LinearLayout
							android:id="@+id/pressureTextLayout"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:gravity="center_vertical"
							android:layout_marginBottom="25dp"
							android:orientation="horizontal">
							<ImageView
								android:id="@+id/pressureIcon"
								android:layout_width="14dp"
								android:layout_height="14dp"
								android:layout_marginEnd="7dp"
								android:src="@drawable/cloudscale"
								android:scaleType="fitXY"
							/>
							<TextView
								android:id="@+id/pressureText"
								android:textColor="#FFFFFF"
								android:textSize="16sp"
								android:layout_height="wrap_content"
								android:layout_width="match_parent"
								android:layout_weight="1"
								android:text="@string/pressure"
							/>
						</LinearLayout>
						<TextView
							android:id="@+id/pressurePower"
							android:textColor="#FFFFFF"
							android:textSize="48sp"
							android:layout_marginBottom="16dp"
							android:layout_height="wrap_content"
							android:layout_width="wrap_content"
							android:text="1009"
						/>
						<TextView
							android:id="@+id/pressureDescription"
							android:textColor="#FFFFFF"
							android:textSize="16sp"
							android:layout_height="wrap_content"
							android:layout_width="wrap_content"
							android:text="hPa"
						/>
					</LinearLayout>
				</LinearLayout>
				<LinearLayout
					android:id="@+id/r7t01jsh0l5e"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:gravity="center_vertical"
					android:layout_marginBottom="16dp"
					android:layout_marginHorizontal="16dp"
					android:orientation="horizontal">
					<LinearLayout
						android:id="@+id/visibility"
						android:layout_width="154dp"
						android:layout_height="wrap_content"
						android:background="@drawable/medium_bg"
						android:paddingVertical="18dp"
						android:paddingHorizontal="16dp"
						android:orientation="vertical">
						<LinearLayout
							android:id="@+id/visibilityTextLayout"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:gravity="center_vertical"
							android:layout_marginBottom="22dp"
							android:orientation="horizontal">
							<ImageView
								android:id="@+id/visibilityIcon"
								android:layout_width="17dp"
								android:layout_height="14dp"
								android:layout_marginEnd="4dp"
								android:src="@drawable/eye"
								android:scaleType="fitXY"
							/>
							<TextView
								android:id="@+id/visibilityText"
								android:textColor="#FFFFFF"
								android:textSize="16sp"
								android:layout_height="wrap_content"
								android:layout_width="match_parent"
								android:layout_weight="1"
								android:text="@string/visibility"
							/>
						</LinearLayout>
						<TextView
							android:id="@+id/visibilityPower"
							android:textColor="#FFFFFF"
							android:textSize="40sp"
							android:layout_marginBottom="18dp"
							android:layout_height="wrap_content"
							android:layout_width="wrap_content"
							android:text="10 km"
						/>
						<TextView
							android:id="@+id/visibilityDescription"
							android:textColor="#FFFFFF"
							android:textSize="16sp"
							android:layout_height="wrap_content"
							android:layout_width="wrap_content"
							android:text="Nhìn rõ"
						/>
					</LinearLayout>
					<View
						android:layout_width="0dp"
						android:layout_height="0dp"
						android:layout_weight="1"
					 />
				</LinearLayout>
			</LinearLayout>
		</LinearLayout>
	</ScrollView>


</LinearLayout>
